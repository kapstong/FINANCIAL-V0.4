# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=atiera
DB_USER=root
DB_PASS=

# Application Configuration
APP_NAME="ATIERA Financial Suite"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/financial

# Security Configuration
APP_KEY=your-secret-key-here
SESSION_LIFETIME=7200
CSRF_TOKEN_SECRET=your-csrf-secret-here

# Email Configuration (optional)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@atiera.com
MAIL_FROM_NAME="ATIERA System"

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_PATH=uploads/

# API Configuration
API_RATE_LIMIT=100
API_KEY_SECRET=your-api-secret-here

# Cache Configuration
CACHE_DRIVER=file
CACHE_TTL=3600
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
